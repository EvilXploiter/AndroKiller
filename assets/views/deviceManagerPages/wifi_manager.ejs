<div class="ui red segment" style="background-color: #404451;">
    <div class="ui secondary menu">
        <div class="right menu">
            <button onclick="updateButton(this, '0xWI')" class="ui blue button"> <i
                    class="icon sync"></i>Update</button>
        </div>
    </div>
    <h3 class="ui red dividing header" style="text-shadow: 0px 0px 8px rgb(0, 0, 0);">Current</h3>

    <table class="ui celled table">
        <thead>
            <tr>
                <th style="color:red; background-color: #010101; text-shadow: 0px 0px 8px red;">SSID</th>
                <th style="color:red; background-color: #010101; text-shadow: 0px 0px 8px red;">BSSID</th>
            </tr>
        </thead>
        <tbody style="background-color:  rgb(131, 140, 143);">
            <% pageData.now.forEach((wifi) => { %>
            <tr>
                <td ><%= wifi.SSID %></td>
                <td><%= wifi.BSSID %></td>
            </tr>
            <% }) %>
        </tbody>
    </table>


    <h3 class="ui red dividing header" style="text-shadow: 0px 0px 8px rgb(0, 0, 0);">History</h3>

    <table class="ui celled table">
        <thead>
            <tr>
                <th style="color:red; background-color: #010101; text-shadow: 0px 0px 8px red;">SSID</th>
                <th style="color:red; background-color: #010101; text-shadow: 0px 0px 8px red;">BSSID</th>
                <th style="color:red; background-color: #010101; text-shadow: 0px 0px 8px red;">Discovered On</th>
                <th style="color:red; background-color: #010101; text-shadow: 0px 0px 8px red;">Last Seen</th>
            </tr>
        </thead>
        <tbody style="background-color:  rgb(131, 140, 143);">
            <% 
            pageData.log.forEach((wifi) => { 
                let firstSeen = new Date(wifi.firstSeen);
                let lastSeen = new Date(wifi.lastSeen);
                %>
            <tr>
                <td><%= wifi.SSID %></td>
                <td><%= wifi.BSSID %></td>
                <td><%= firstSeen.toLocaleString('en-GB', { timeZone: 'UTC' }) %></td>
                <td><%= lastSeen.toLocaleString('en-GB', { timeZone: 'UTC' }) %></td>
            </tr>
            <% }) %>
        </tbody>
    </table>

</div>